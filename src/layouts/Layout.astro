---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

		<title>Portfolio de Jesús Merlo - DevOps & Cloud Engineer</title>
		<meta
			name="description"
			content="Portfolio de Jesús Merlo - DevOps & Cloud Engineer"
		/>
		<meta
			name="keywords"
			content="Astro, DevOps, Cloud Engineer, Portfolio, Jesús Merlo, Desarrollo web, Infraestructura como código, CI/CD, AWS, Docker, Terraform"
		/>
		<meta name="author" content="Jesús Merlo" />
		<meta name="generator" content={Astro.generator} />

		<meta property="og:type" content="website" />
		<meta
			property="og:title"
			content="Portfolio de Jesús Merlo - DevOps & Cloud Engineer"
		/>
		<meta
			property="og:description"
			content="Portfolio de Jesús Merlo - DevOps & Cloud Engineer"
		/>
		<meta property="og:image" content="https://jesuslabtech.vercel.app/portfolio-mock.png" />
		<meta property="og:url" content="https://jesuslabtech.vercel.app" />
		<meta property="og:site_name" content="Portfolio de Jesús Merlo" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="Portfolio de Jesús Merlo - DevOps & Cloud Engineer"
		/>
		<meta
			name="twitter:description"
			content="Portfolio de Jesús Merlo - DevOps & Cloud Engineer"
		/>
		<meta name="twitter:image" content="https://jesuslabtech.vercel.app/portfolio-mock.png" />
		

		<meta name="theme-color" content="#0f172a" />


		<ClientRouter />
	</head>
	<body class="dark min-h-screen bg-background text-foreground antialiased">
		<div class="noise-overlay"></div>
		<div class="container">
			<slot />
		</div>
	</body>
</html>

<style>
	.container {
		max-width: 100%;
		margin: 0 auto;
	}
</style>
