---
import { getCollection} from "astro:content"
const posts = await getCollection('posts');

const latestPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()).slice(0, 2);
---

<div class="max-w-4xl mx-auto px-6 py-24">
    <div class="flex items-center justify-center mb-16 gap-3">
        <span class="w-12 h-px bg-gradient-to-r from-transparent to-amber-500/50"></span>
        <span class="text-amber-400 text-sm font-semibold tracking-[0.3em] uppercase" style="font-family: 'JetBrains Mono', monospace;">Writing</span>
        <span class="w-12 h-px bg-gradient-to-l from-transparent to-amber-500/50"></span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {latestPosts.map((post, idx) => (
            <a href={`/posts/${post.slug}`} class="block group">
                <div class="glass-card rounded-2xl p-6 h-full hover-lift">
                    {post.data.coverImage && (
                        <div class="relative overflow-hidden rounded-xl mb-5">
                            <img
                                transition:name={`${post.slug}-view-transition-img`}
                                src={post.data.coverImage}
                                alt={post.data.title}
                                class="w-full h-40 object-cover opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-500"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-[#030712]/50 to-transparent"></div>
                        </div>
                    )}
                    <h3 transition:name={`${post.slug}-view-transition-title`} class="text-lg font-semibold text-white mb-2 line-clamp-2" style="font-family: 'Outfit', sans-serif;">{post.data.title}</h3>
                    <p class="text-gray-300 text-sm mb-4 line-clamp-2">{post.data.description}</p>
                    <span class="text-gray-500 text-xs" style="font-family: 'JetBrains Mono', monospace;">{new Date(post.data.date).toLocaleDateString()}</span>
                </div>
            </a>
        ))}
    </div>
</div>
