---
import Button from "@components/ui/Button.astro";
import { Github, Linkedin, Mail, FileText } from "@lucide/astro";
import heroBg from "@/assets/hero-bg.jpg";
---

<section
    class="relative min-h-screen flex items-center justify-center overflow-hidden bg-background text-foreground"
>
    <!-- Imagen de fondo -->
    <div class="absolute inset-0 z-0">
        <img
            src={heroBg.src}
            alt="Hero background"
            class="w-full h-full object-cover object-start opacity-20"
        />
    </div>

    <!-- Capa de gradiente más intensa con desenfoque -->
    <div
        class="absolute inset-0 z-10 bg-gradient-to-br from-background/80 via-background/70 to-primary/30 backdrop-blur-sm"
        
        >
    </div>

    <!-- Contenido -->
    <div
        class="relative container mx-auto px-6 z-20 text-center animate-in fade-in slide-in-from-bottom-4 duration-1000"
    >
        <span class="inline-block px-4 py-2 rounded-full bg-[hsl(var(--primary)/0.15)] text-[hsl(var(--primary))] text-sm font-medium mb-6 animate-in fade-in slide-in-from-top-4 duration-700 delay-150">
            Junior DevOps Engineer
        </span>
        <h1
            class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-[hsl(var(--foreground))] via-[hsl(var(--foreground)/0.8)] to-[hsl(var(--primary))] bg-clip-text text-transparent"
        >
            Jesús Merlo
        </h1>

        <p
            class="text-xl md:text-2xl text-muted-[hsl(var(--foreground))] mb-10 max-w-2xl mx-auto"
        >
            Building scalable cloud infrastructure on AWS with a passion for
            automation and continuous improvement
        </p>

        <div class="flex flex-wrap gap-4 justify-center mb-12">
            <Button
                variant="accent"
                size="lg"
                class="gap-2 shadow-lg hover:shadow-xl transition-shadow"
                onClick="window.location.href='#contact'"
            >
                <Mail class="h-5 w-5" />
                Contáctame
            </Button>

            <Button
                variant="outline"
                size="lg"
                class="gap-2"
                onClick="downloadCV()"
            >
                <FileText class="h-5 w-5" />
                Descargar CV
            </Button>
        </div>

        <div class="flex gap-6 justify-center">
            <a
                href="https://github.com"
                target="_blank"
                rel="noopener noreferrer"
                class="text-muted-[hsl(var(--foreground))] hover:text-[hsl(var(--primary))] transition-colors"
            >
                <Github class="h-6 w-6" />
            </a>

            <a
                href="https://linkedin.com"
                target="_blank"
                rel="noopener noreferrer"
                class="text-muted-[hsl(var(--foreground))] hover:text-[hsl(var(--primary))] transition-colors"
            >
                <Linkedin class="h-6 w-6" />
            </a>
        </div>
    </div>
</section>

<script>
    function downloadCV() {
        const link = document.createElement("a");
        link.href = "/CV.pdf";
        link.download = "Jesús_Merlo_CV.pdf";
        link.click();
    }
</script>
