---
import Button from "@components/ui/Button.astro";
import { Mail, Linkedin, Github } from "@lucide/astro";
---

<div id="contact" class="max-w-4xl mx-auto px-6 py-24 text-center">
    <div class="flex items-center justify-center mb-10 gap-3">
        <span class="w-12 h-px bg-gradient-to-r from-transparent to-amber-500/50"></span>
        <span class="text-amber-400 text-sm font-semibold tracking-[0.3em] uppercase" style="font-family: 'JetBrains Mono', monospace;">Get in Touch</span>
        <span class="w-12 h-px bg-gradient-to-l from-transparent to-amber-500/50"></span>
    </div>
    
    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6" style="font-family: 'Outfit', sans-serif;">
        Let's work together
    </h2>
    
    <p class="text-gray-300 text-lg mb-12 max-w-xl mx-auto leading-relaxed">
        I'm currently available for freelance work and full-time opportunities.
    </p>

    <div class="flex flex-wrap gap-4 justify-center mb-8">
        <Button
            variant="default"
            size="lg"
            class="gap-2 px-8 py-3 text-base font-medium hover-lift"
            href="mailto:jesus.lab.tech@gmail.com"
        >
            <Mail class="h-5 w-5" />
            Email me
        </Button>
        
        <Button
            variant="outline"
            size="lg"
            class="gap-2 px-8 py-3 text-base font-medium"
            href="https://linkedin.com/in/jesusmerlo"
            target="_blank"
            rel="noopener noreferrer"
        >
            <Linkedin class="h-5 w-5" />
            LinkedIn
        </Button>
        
        <Button
            variant="outline"
            size="lg"
            class="gap-2 px-8 py-3 text-base font-medium"
            href="https://github.com/jesuslabtech"
            target="_blank"
            rel="noopener noreferrer"
        >
            <Github class="h-5 w-5" />
            GitHub
        </Button>
    </div>
</div>
