---
import Button from "@components/ui/Button.astro";
import { Mail, Linkedin, Github } from "@lucide/astro";
---

<div id="contact" class="max-w-4xl mx-auto px-6 py-20 text-center">
    <div class="flex items-center justify-center mb-8 gap-2">
        <span class="text-amber-400 text-sm font-semibold tracking-[0.2em] uppercase">Get in Touch</span>
        <span class="text-amber-400 text-xl font-mono">â†’</span>
    </div>
    
    <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Let's work together
    </h2>
    
    <p class="text-gray-300 text-lg mb-10 max-w-xl mx-auto">
        I'm currently available for freelance work and full-time opportunities.
    </p>

    <div class="flex flex-wrap gap-4 justify-center mb-12">
        <Button
            variant="default"
            size="lg"
            class="gap-2"
            href="mailto:jesus.lab.tech@gmail.com"
        >
            <Mail class="h-5 w-5" />
            Email me
        </Button>
        
        <Button
            variant="outline"
            size="lg"
            class="gap-2"
            href="https://linkedin.com/in/jesusmerlo"
            target="_blank"
            rel="noopener noreferrer"
        >
            <Linkedin class="h-5 w-5" />
            LinkedIn
        </Button>
        
        <Button
            variant="outline"
            size="lg"
            class="gap-2"
            href="https://github.com/jesuslabtech"
            target="_blank"
            rel="noopener noreferrer"
        >
            <Github class="h-5 w-5" />
            GitHub
        </Button>
    </div>
</div>
