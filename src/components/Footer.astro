---
import { Github, Linkedin, Mail, Heart } from "@lucide/astro";

const currentYear = new Date().getFullYear();

const socialLinks = [
    { icon: Github, href: "https://github.com/jesuslabtech", label: "GitHub" },
    { icon: Linkedin, href: "https://linkedin.com/in/jesusmerlo", label: "LinkedIn" },
    { icon: Mail, href: "mailto:jesus@jesusmerlo.es", label: "Email" },
];
---

<footer class="border-t border-gray-800/50 mx-auto py-16">
    <div class="max-w-4xl mx-auto px-6">
        <div class="flex flex-col items-center gap-8">
            <div class="flex items-center gap-3">
                <div class="w-2.5 h-2.5 bg-amber-500 rounded-full animate-pulse"></div>
                <span class="text-amber-400 text-sm tracking-wide" style="font-family: 'JetBrains Mono', monospace;">Available for work</span>
            </div>
            
            <div class="flex items-center gap-6">
                {socialLinks.map((social) => {
                    const Icon = social.icon;
                    return (
                        <a
                            href={social.href}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group flex items-center gap-2 text-gray-500 hover:text-amber-400 transition-all duration-300"
                            aria-label={social.label}
                        >
                            <Icon class="h-5 w-5 group-hover:scale-110 transition-transform" />
                        </a>
                    );
                })}
            </div>
            
            <div class="w-24 h-px bg-gradient-to-r from-transparent via-gray-700 to-transparent"></div>
            
            <p class="text-gray-500 text-sm" style="font-family: 'JetBrains Mono', monospace;">
                © {currentYear} Jesús Merlo <Heart class="h-3 w-3 inline-block text-amber-500 fill-amber-500 mb-1 ml-1" />
            </p>
        </div>
    </div>
</footer>
