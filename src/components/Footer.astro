---
import {
    Heart,
    Cloud,
    Container,
    Terminal,
    Database,
    Network,
} from "@lucide/astro";
import Badge from "../components/ui/Badge.astro";

const currentYear = new Date().getFullYear();

const techStack = [
    { icon: Cloud, label: "AWS" },
    { icon: Container, label: "Docker" },
    /* { icon: Boxes, label: "Kubernetes" }, */
    { icon: Terminal, label: "Terraform" },
    { icon: Database, label: "Databases" },
    { icon: Network, label: "Networking" },
];
---

<footer
    class="border-t-2 border-[hsl(var(--border))] mx-auto my-0 py-10 text-center text-sm text-muted-foreground"
>
    <div class="max-w-[50%] mx-auto flex flex-col items-center gap-6 md:flex-row md:justify-between md:px-20">
        {/* Logo/Brand */}
        <div class="flex flex-col items-center gap-2">
            <button
                id="logo-btn"
                data-href="#"
                class="text-xl font-bold bg-gradient-to-r from-[hsl(var(--primary))] to-[hsl(var(--accent))] bg-clip-text text-transparent hover:cursor-pointer hover:opacity-80 transition-opacity"
            >
                JM
            </button>
            <p class="text-sm text-muted-foreground">Cloud Engineer</p>
            {/* Availability Badge */}
            <Badge variant="outline" class="border-amber-500 text-amber-500 p-2">
                <span class="mr-2">●</span>Available
            </Badge>
        </div>

        {/* Tech Stack */}
        <div class="flex flex-col items-center gap-3">
            <p class="text-xs text-muted-foreground uppercase tracking-wider">
                Tech Stack
            </p>
            <div class="flex flex-wrap items-center justify-center gap-4">
                {
                    techStack.map((tech) => {
                        const Icon = tech.icon;
                        return (
                            <div class="flex flex-col items-center gap-1 group">
                                <Icon class="h-5 w-5 text-foreground/60 group-hover:text-accent transition-colors" />
                                <span class="text-xs text-muted-foreground">
                                    {tech.label}
                                </span>
                            </div>
                        );
                    })
                }
            </div>
        </div>
    </div>
    {/* Copyright */}
    <div class="text-xs text-muted-foreground py-4">
        © 2025 - {currentYear}. Jesús Merlo. Done with <Heart
            class="text-amber-500 fill-amber-500 inline-block h-4 w-4 mb-2"
        />
    </div>
</footer>
