---

import { Briefcase, Calendar } from "@lucide/astro";
import Card from "@/components/ui/Card.astro";
import Badge from "@/components/ui/Badge.astro";

const experiences = [
  {
    title: "Junior Cloud Engineer",
    company: "Crononauta S.L",
    period: "Nov 2024 - Oct 2025",
    location: "Remote",
    description:
      "Maintain and monitor cloud infrastructure on AWS",
    achievements: [
      "Migration of internal monitoring infrastructure to a new VPC with no service downtime",
      "Resolution of incidents in client Cloud environments",
      "24/7 on-call operator for critical services on AWS",
      "Cloning of production environments for development and testing",
    ],
    technologies: ["AWS", "Prometheus", "Linux", "Puppeteer", "Terraform"],
  },

];

---


<div class="max-w-[80%] mx-auto my-0 py-20">
  
  <div class="text-center mb-16">
    <h2 class="text-4xl md:text-5xl font-bold mb-4">Job Experience</h2>
    <p class="text-xl text-balance text-muted-[hsl(var(--foreground))] max-w-2xl mx-auto">
      Professional background in Cloud and AWS infrastructure.
    </p>
  </div>
  
  <div class="max-w-4xl mx-auto space-y-6">
    {experiences.map((exp, index) => (
      <Card
        class="p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border-border/50 bg-card/50 backdrop-blur-sm"
        style={`animation-delay: ${index * 100}ms`}
      >
        
        <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
          <div class="flex items-start gap-3 mb-3 md:mb-0">
            <div class="p-3 rounded-lg bg-[hsl(var(--primary))]/10 text-[hsl(var(--primary))]">
              <Briefcase class="h-6 w-6" />
            </div>
            <div>
              <h3 class="text-2xl font-bold">{exp.title}</h3>
              <p class="text-lg text-[hsl(var(--primary))] font-semibold">{exp.company}</p>
              <p class="text-sm text-muted-[hsl(var(--foreground))]">{exp.location}</p>
            </div>
          </div>
          <div class="flex items-center gap-2 text-muted-[hsl(var(--foreground))]">
            <Calendar class="h-4 w-4" />
            <span class="text-sm">{exp.period}</span>
          </div>
        </div>
        
        <p class="text-muted-[hsl(var(--foreground))] mb-4 leading-relaxed">
          {exp.description}
        </p>
        
        <div class="mb-4">
          <h4 class="text-sm font-semibold mb-2 text-[hsl(var(--foreground))]">
            Achievements and Responsibilities:
          </h4>
          <ul class="space-y-1">
            {exp.achievements.map((achievement, idx) => (
              <li class="text-sm text-muted-[hsl(var(--foreground))] flex items-start gap-2">
                <span class="text-[hsl(var(--primary))] mt-1">â€¢</span>
                <span>{achievement}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="flex flex-wrap gap-2">
          {exp.technologies.map((tech, idx) => (
            <Badge
              variant={idx < 3 ? "accent" : "secondary"}
              class={idx < 3 ? "bg-[hsl(var(--accent))] hover:bg-[hsl(var(--accent))]/90" : ""}
            >
              {tech}
            </Badge>
          ))}
        </div>
      </Card>
    ))}
  </div>
</div>
