---
import { Briefcase, Calendar } from "@lucide/astro";
import Badge from "@/components/ui/Badge.astro";

const experiences = [
  {
    title: "Junior Cloud Engineer",
    company: "Crononauta S.L",
    period: "Nov 2024 - Present",
    location: "Remote",
    description:
      "Maintain and monitor cloud infrastructure on AWS with focus on high availability, automation, and incident response.",
    achievements: [
      "Migration of monitoring infrastructure with zero downtime",
      "24/7 on-call for critical AWS services",
      "Incident resolution in client Cloud environments",
      "Automated routine maintenance tasks with Puppet and Terraform",
    ],
    technologies: ["AWS", "Linux", "Prometheus", "24x7 Support", "Terraform"],
  },
];
---

<div class="max-w-4xl mx-auto px-6 py-20">
  <div class="flex items-center justify-center mb-12 gap-2">
    <span class="text-amber-400 text-sm font-semibold tracking-[0.2em] uppercase">Experience</span>
    <span class="text-amber-400 text-xl font-mono">→</span>
  </div>
  
  <div class="space-y-8">
    {experiences.map((exp, index) => (
      <div class="glass-card rounded-2xl p-7 transition-all duration-300">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-5">
          <div class="mb-4 md:mb-0">
            <h3 class="text-xl font-semibold text-white mb-1">{exp.title}</h3>
            <p class="text-amber-400 font-mono text-sm">{exp.company} · {exp.location}</p>
          </div>
          <div class="flex items-center gap-2 text-gray-400 font-mono text-sm">
            <Calendar class="h-4 w-4" />
            <span>{exp.period}</span>
          </div>
        </div>
        
        <p class="text-gray-300 mb-5 leading-relaxed">
          {exp.description}
        </p>
        
        <div class="mb-5">
          <ul class="space-y-2">
            {exp.achievements.map((achievement) => (
              <li class="text-gray-400 font-mono text-sm flex items-start gap-3">
                <span class="text-amber-400 mt-0.5">→</span>
                <span>{achievement}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="flex flex-wrap gap-2">
          {exp.technologies.map((tech, idx) => (
            <span class={`px-3 py-1.5 rounded-md text-xs font-mono ${idx === 0 ? 'bg-amber-500/10 text-amber-400 border border-amber-500/20' : 'bg-gray-800/50 text-gray-300'}`}>
              {tech}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>
